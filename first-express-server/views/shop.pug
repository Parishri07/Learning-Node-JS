extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")
    
block content 
    main 
        if prods.length > 0 
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://assets.architecturaldigest.in/photos/624c2654cf7483eb90e638d6/16:9/w_2560%2Cc_limit/Books-1.jpg", alt="A book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very intresting book 
                        .card__actions
                            button.btn Add to Cart     
        else 
            h1 No Products
        
